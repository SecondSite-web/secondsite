{% extends 'user_index.twig' %}
    {% block body %}
    <form id="registration-form" class="user" action="{{ site.admin }}php/register.php" method="post" role="form" data-toggle="validator">
        <div class="messages"></div>
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <input type="text" class="form-control form-control-user"  id="firstname" name="firstname" placeholder="First Name" required="required">
            </div>
            <div class="col-sm-6">
                <input type="text" class="form-control form-control-user" id="lastname" name="lastname" placeholder="Last Name" required="required">
            </div>
        </div>
        <div class="form-group">
            <input type="email" class="form-control form-control-user" id="email" name="email" placeholder="email@address.com" required="required">
        </div>
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <input type="password" class="form-control form-control-user" id="password" name="password" placeholder="Password Please" required="required">
            </div>
            <div class="col-sm-6">
                <input type="password" class="form-control form-control-user" id="confim_password" name="confirm_password" placeholder="Password again please!" required="required">
            </div>
        </div>
        <button type="submit" id="submit" class="btn btn-success btn-send">Register</button>
    </form>
    {% endblock %}
    {% block scripts %}
        <script type="text/javascript" src="{{ site.admin }}js/register.min.js"></script>
    {% endblock %}