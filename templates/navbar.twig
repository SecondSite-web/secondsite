				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
						<i class="fas fa-user"></i> {{ user.firstname|escape|capitalize }}
					</a>
					<div class="dropdown-menu">
                        {% for item in usernav %}
							<a target="_blank" class="dropdown-item" href="{{ item.url|escape }}">{{ item.title|escape }}</a>
                        {% endfor %}

						<a target="_blank" class="dropdown-item" href="{{ site.admin|escape }}login.php" data-toggle="modal" data-target="#loginModal">
